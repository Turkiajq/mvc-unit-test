@{
    ViewData["Title"] = "Travel";
    //List<WeatherViewModel> cities = (List<WeatherViewModel>)ViewBag.visits;
    List <TravelViewModel> cts = (List<TravelViewModel>)ViewBag.cts;
}

<div className="container">
    <div className="container">
        <div class="row">
            @{
                foreach (var city in cts)
                {
                    <div class="col-4">

                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@city.Url" alt="Card image cap" height="300" >
                            <div class="card-body">
                                <h5 class="card-title">@city.Name</h5>
                                <p class="card-text"> Best time to visit:</p>
                                <p class="card-text" style="font-size: 12px"> @city.bestMonthToVisit .</p>
                                <p class="card-text"> Average Tempreture: @city.AverageTemp<sup>C <sup><i class="fa fa-circle-o" aria-hidden="true"></i></sup></sup></p>

                            </div>
                        </div>
                        <br />
                        <br />
                    </div>
                }
            }
        </div>
       
    </div>

</div>
