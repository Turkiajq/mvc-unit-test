@{
    ViewData["Title"] = "Weather";
    List<WeatherViewModel> cities = (List<WeatherViewModel>)ViewBag.cities;
}


<div className="container">
    <div class="row">
        @{
            foreach (var city in cities)
            {
                if (city.location.name == "Al Hada")
                {
                    city.location.name = "Taif";
                }

                <div class="col-4" >

                    <h1 class="badge badge-dark">@city.location.name, @city.location.region, @city.location.country</h1>

                    <div class="weather-part-third border" style="background-color: lightblue">
                        <div class="row">
                            <div class="col-lg-12 weather-part-third-image">
                                <div>
                                    <img height="100" src="@city.current.condition.icon">
                                </div>
                               
                                <div class="badge badge-danger weather-part-third-image-label pl-3 pr-3 pt-2 rounded-0">
                                    <p>@city.location.localtime.Day</p>
                                    <p>@city.location.localtime.ToString("MMM")</p>
                                    <p>@city.location.localtime.Year</p>
                                    @*<p>@string.Format("{0:hh tt}", city.location.localtime)</p>*@
                                </div>
                            </div>
                            <div class="col-lg-12 col-12 text-center">
                                <div class="weather-part-thitd-icon">
                                    <div class="row">
                                        <div class="col-lg-4 col-4 p-2">
                                            <p class="pt-3"><i class="fa fa-thermometer-quarter" aria-hidden="true"></i></p>
                                            <p style="white-space: nowrap; text-align: center;">&nbsp; &nbsp;  @city.current.temp_c<sup>C <sup><i class="fa fa-circle-o" aria-hidden="true"></i></sup></sup>&nbsp;  @city.current.condition.text</p>
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                </div>

            }
        }

    </div>

</div>



